<div class="row">
    <div class="col-xs-12">

        <h1>
            {{ _ "settlenewarticle-title" }}
        </h1>

        <p class="step-description">
            {{ _ "settlenewarticle-intro-text" }}
        </p>

    </div>
</div>

<div class="row settlenewarticle-step-0">
    <div class="col-xs-12">

        <form class="form-horizontal" id="settlenewarticle-form" method="post">

            <div class="form-group settlecategories-dropdown-span">
                <label for="settlenewarticle_pageCategory" class="col-sm-1 control-label label-form-required">Category</label>
                <div class="col-sm-10">
                    <select id="settlenewarticle_pageCategory" name="category_id" class="settlecategories-dropdown form-control" required>
                        <option></option>
                        {{& categoriesHtml }}
                    </select>
                    <span class="category-input-text-description help-block">Please select a category.</span>
                    <!--<span id="helpBlock" class="help-block">A block of help text that breaks onto a new line and may extend beyond one line.</span>-->
                </div>
            </div>

            <fieldset class="step1-geolocation-set">

                <div class="form-group settle-geo-input" data-hidden-input="country_id" data-category-input-name="category_id" data-geo-type="country" data-state-input-name="settlenewarticle_pageState" data-city-input-name="settlenewarticle_pageCity">
                    <label for="settlenewarticle_pageCountry" class="col-sm-1 control-label label-form-required">Country</label>
                    <div class="col-sm-10">
                        <select class="form-control" name="country" id="settlenewarticle_pageCountry" required>
                            <option></option>
                            {{& countriesHtml }}
                        </select>
                        <input type="hidden" name="country_id" />
                    </div>
                </div>

                <div class="form-group settle-geo-input" data-hidden-input="state_id" data-category-input-name="category_id" data-geo-type="state" data-city-input-name="settlenewarticle_pageCity">
                    <label for="settlenewarticle_pageState" class="col-sm-1 control-label">State</label>
                    <div class="col-sm-10">
                        <select class="form-control" name="state" id="settlenewarticle_pageState"></select>
                        <input type="hidden" name="state_id" />
                    </div>
                </div>

                <div class="form-group settle-geo-input" data-hidden-input="city_id" data-category-input-name="category_id" data-geo-type="city">
                    <label for="settlenewarticle_pageCity" class="col-sm-1 control-label">City</label>
                    <div class="col-sm-10">
                        <select class="form-control" name="city" id="settlenewarticle_pageCity"></select>
                        <input type="hidden" name="city_id" />
                    </div>
                </div>

            </fieldset>

            <input type="hidden" name="step" value="1" />
            <div class="form-group">
                <div class="col-sm-offset-1 col-sm-10 text-right">
                    <button type="submit" class="btn btn-primary">Proceed</button>
                </div>
            </div>

        </form>

    </div>
</div>