<div class="row">
    <div class="col-xs-12">

        <h1>
            {{ _ "settlenewarticle-title" }}
        </h1>

        <p class="step-description">
            {{ _ "settlenewarticle-intro-text-step-1" }}
        </p>

    </div>
</div>

<div class="row settlenewarticle-step-1">
    <div class="col-xs-12">

        <form class="form-horizontal" id="settlenewarticle-form-step-1" method="get" action="{{ form_action }}" >

            <div class="form-group">
                <label class="col-sm-1 control-label">Category</label>
                <div class="col-sm-10">
                    <p id="d-category-name" class="form-control-static">{{ category_name }}</p>
                    <input type="hidden" name="Card[Category]" value="{{ category_id }}" />
                </div>
            </div>

            {{# country_name }}
            <div class="form-group">
                <label class="col-sm-1 control-label">Country</label>
                <div class="col-sm-10">
                    <p id="d-country-name" class="form-control-static">{{ . }}</p>
                    <input type="hidden" name="Card[Country]" value="{{ . }}" />
                </div>
            </div>
            {{/country_name}}

            {{# state_name }}
            <div class="form-group">
                <label class="col-sm-1 control-label">State</label>
                <div class="col-sm-10">
                    <p id="d-state-name" class="form-control-static">{{ . }}</p>
                    <input type="hidden" name="Card[State]" value="{{ . }}" />
                </div>
            </div>
            {{/state_name}}

            {{# city_name }}
            <div class="form-group">
                <label class="col-sm-1 control-label">City</label>
                <div class="col-sm-10">
                    <p id="d-city-name" class="form-control-static">{{ . }}</p>
                    <input type="hidden" name="Card[City]" value="{{ . }}" />
                </div>
            </div>
            {{/city_name}}

            <div class="form-group">
                <label for="settlenewarticle_title" class="col-sm-1 control-label label-form-required">Title</label>
                <div class="col-sm-10">
                    <input
                            data-category-id="{{ category_id }}"
                            data-geo-ids="{{ geo_ids }}"
                            class="form-control" type="text" name="Card[Title]" id="settlenewarticle_title" required value="{{ page_title }}" />
                    <span id="helpBlock" class="help-block">Please specify title of the page you're about to create.</span>
                </div>
            </div>

            <div id="similar-articles" class="col-sm-10 col-sm-offset-1" >
                <div class="similar-articles-heading">
                </div>
                <div class="row">
                </div>
            </div>

            <!-- <input type="hidden" name="step" value="2" /> -->
            <input type="hidden" name="newarticle" value="yes" />
            <div class="form-group">
                <div class="col-sm-offset-1 col-sm-1">
                    <a href="/index.php/Special:SettleNewArticle">Back</a>
                </div>
                <div class="col-sm-9 text-right">
                    <button id="step1submit" type="submit" class="btn btn-primary" disabled >Create page</button>
                </div>
            </div>

        </form>

    </div>
</div>